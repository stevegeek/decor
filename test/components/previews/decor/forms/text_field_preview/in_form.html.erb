<%= render ::Decor::Forms::Form.new(model: model, url: "#", local: true) do |form_component| %>
  <%= render ::Decor::Forms::LayoutContainer.new do |container| %>
    <%= render ::Decor::Forms::LayoutSection.new(title: "Text", stacked: stacked_form) do %>
      <%= form_component.builder.text_field :first_name,
                       label: "First Name",
                       label_position: label_position,
                       grid_span: grid_span,
                       required: true %>
      <%= form_component.builder.text_field :last_name,
                       label: "Last Name",
                       label_position: label_position,
                       grid_span: grid_span,
                       required: true %>
      <%= form_component.builder.text_field :email,
                       label: "Email",
                       type: :email,
                       label_position: label_position,
                       grid_span: :span_full,
                       required: true,
                       helper_text: "We'll use this to contact you" %>
    <% end %>
    <% container.with_buttons do %>
      <%= form_component.builder.submit %>
    <% end %>
  <% end %>
<% end %>