<%= render ::Decor::Forms::Form.new(model: model, url: "#", local: true) do |form_component| %>
  <%= render ::Decor::Forms::LayoutContainer.new do |container| %>
    <%= render ::Decor::Forms::LayoutSection.new(stacked: stacked_form) do %>
      <%= form_component.builder.switch :option,
                   label: label,
                   description: description,
                   show_label: show_label,
                   value: value,
                   required: required,
                   disabled: disabled,
                   helper_text: helper_text,
                   hide_required_asterisk: hide_required_asterisk,
                   compact: compact,
                   label_position: label_position,
                   grid_span: grid_span,
                   floating_error_text: floating_error_text,
                   placeholder: placeholder,
                   checked: checked,
                   in_group: in_group,
                   submit_on_change: submit_on_change,
                   confirm_on_submit: confirm_on_submit.presence,
                   confirm_on_submit_yes: confirm_on_submit_yes.presence,
                   confirm_on_submit_no: confirm_on_submit_no.presence %>
    <% end %>
  <% end %>
<% end %>
