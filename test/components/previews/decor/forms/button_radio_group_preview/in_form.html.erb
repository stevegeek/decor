<%= render ::Decor::Forms::Form.new(model: model, url: "#", local: true) do |form_component| %>
  <%= render ::Decor::Forms::LayoutContainer.new do |container| %>
    <%= render ::Decor::Forms::LayoutSection.new(title: "Button Radio Group", description: "Select one of the available options", stacked: stacked_form) do %>
      <%= form_component.builder.button_radio_group :chosen,
                               choices,
                               label: label,
                               description: description,
                               show_label: show_label,
                               label_position: label_position,
                               grid_span: grid_span,
                               floating_error_text: floating_error_text,
                               value: value,
                               required: required,
                               disabled: disabled,
                               helper_text: helper_text,
                               hide_required_asterisk: hide_required_asterisk %>
    <% end %>
    <% container.with_buttons do %>
      <%= form_component.builder.submit %>
    <% end %>
  <% end %>
<% end %>
