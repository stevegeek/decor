<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  <% [:base, :primary, :secondary, :accent, :neutral, :success, :error, :warning, :info].each do |color| %>
    <%= render(::Decor::Forms::Select.new(
      name: "select_#{color}",
      label: "#{color.to_s.capitalize} color",
      color: color,
      helper_text: "Color: #{color}",
      **::Decor::Forms::Select.map_options_for_select([
        { title: "Option 1", value: "1" },
        { title: "Option 2", value: "2", selected: true },
        { title: "Option 3", value: "3" }
      ])
    )) %>
  <% end %>
</div>