<div class="space-y-6">
  <div>
    <h3 class="text-lg font-semibold mb-4">Colors</h3>
    <div class="grid grid-cols-2 gap-4">
      <% %w[primary secondary accent neutral success warning info error].each do |color| %>
        <div class="p-4 border rounded-lg">
          <p class="text-sm font-medium mb-2 capitalize"><%= color %></p>
          <%= render ::Decor::Forms::Radio.new(
            name: "color_demo",
            label: "#{color.capitalize} radio",
            value: color,
            color: color.to_sym,
            checked: color == "primary"
          ) %>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">Sizes</h3>
    <div class="grid grid-cols-2 gap-4">
      <% %w[xs sm md lg xl].each do |size| %>
        <div class="p-4 border rounded-lg">
          <p class="text-sm font-medium mb-2 capitalize"><%= size %></p>
          <%= render ::Decor::Forms::Radio.new(
            name: "size_demo",
            label: "#{size.upcase} radio",
            value: size,
            size: size.to_sym,
            checked: size == "md"
          ) %>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">States</h3>
    <div class="grid grid-cols-2 gap-4">
      <div class="p-4 border rounded-lg">
        <p class="text-sm font-medium mb-2">Selected</p>
        <%= render ::Decor::Forms::Radio.new(
          name: "state_demo_1",
          label: "This is selected",
          value: "selected",
          checked: true
        ) %>
      </div>
      <div class="p-4 border rounded-lg">
        <p class="text-sm font-medium mb-2">Unselected</p>
        <%= render ::Decor::Forms::Radio.new(
          name: "state_demo_2",
          label: "This is unselected",
          value: "unselected",
          checked: false
        ) %>
      </div>
      <div class="p-4 border rounded-lg">
        <p class="text-sm font-medium mb-2">Disabled</p>
        <%= render ::Decor::Forms::Radio.new(
          name: "state_demo_3",
          label: "This is disabled",
          value: "disabled",
          disabled: true
        ) %>
      </div>
      <div class="p-4 border rounded-lg">
        <p class="text-sm font-medium mb-2">With Helper Text</p>
        <%= render ::Decor::Forms::Radio.new(
          name: "state_demo_4",
          label: "Radio with help",
          value: "helper",
          helper_text: "This radio has helpful information"
        ) %>
      </div>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">Radio Group Example</h3>
    <div class="p-4 border rounded-lg">
      <p class="text-sm font-medium mb-4">Choose your favorite size:</p>
      <div class="space-y-2">
        <%= render ::Decor::Forms::Radio.new(
          name: "favorite_size",
          label: "Small",
          value: "small",
          checked: true
        ) %>
        <%= render ::Decor::Forms::Radio.new(
          name: "favorite_size",
          label: "Medium",
          value: "medium",
          checked: false
        ) %>
        <%= render ::Decor::Forms::Radio.new(
          name: "favorite_size",
          label: "Large",
          value: "large",
          checked: false
        ) %>
        <%= render ::Decor::Forms::Radio.new(
          name: "favorite_size",
          label: "Extra Large",
          value: "xl",
          checked: false
        ) %>
      </div>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-semibold mb-4">Colored Radio Group</h3>
    <div class="p-4 border rounded-lg">
      <p class="text-sm font-medium mb-4">Choose your preference:</p>
      <div class="space-y-2">
        <%= render ::Decor::Forms::Radio.new(
          name: "preference",
          label: "Success option",
          value: "success",
          color: :success,
          checked: false
        ) %>
        <%= render ::Decor::Forms::Radio.new(
          name: "preference",
          label: "Warning option",
          value: "warning",
          color: :warning,
          checked: true
        ) %>
        <%= render ::Decor::Forms::Radio.new(
          name: "preference",
          label: "Error option",
          value: "error",
          color: :error,
          checked: false
        ) %>
      </div>
    </div>
  </div>
</div>